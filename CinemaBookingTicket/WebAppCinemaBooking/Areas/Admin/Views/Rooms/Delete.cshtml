@model WebAppCinemaBooking.Areas.Admin.Models.Room

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa Phòng</h1>

<h3>Bạn có chắc muốn xóa phòng này?</h3>
<div>
    <h4>Phòng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Phòng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Sức Chứa:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class="col-sm-2">
            Trạng Thái:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Rạp Phim:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cinema.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />

        <input type="submit" value="Xóa" class="btn" style="width: 300px;;margin-bottom: 10px;background-color: #26c6da;" />
        <br />
        <a asp-action="Index" class="btn" style="width: 300px;;margin-bottom: 10px;background-color: #1ea6c1;">Trở Về</a>

    </form>
</div>