@model WebAppCinemaBooking.Areas.Admin.Models.Staf

@{
    ViewData["Title"] = "Details";
}

<h1>Chi Tiết Nhân Viên</h1>

<div>
    <h4>Nhân Viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Nhân Viên:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Email Nhân Viên:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Hình Ảnh:
        </dt>
        <dd class="col-sm-10">
            <img src="~/Uploads/Avatar-Staf/@Html.DisplayFor(model => model.Avatar)" style="max-width:150px" />
        </dd>
        <dt class="col-sm-2">
            Số Điện Thoại:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            Địa Chỉ:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Trạng Thái:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Sửa Nhân Viên</a> |
    <a asp-action="Index">Trở Về</a>
</div>
