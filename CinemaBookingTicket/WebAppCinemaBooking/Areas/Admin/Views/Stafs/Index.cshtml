@model IEnumerable<WebAppCinemaBooking.Areas.Admin.Models.Staf>

@{
    ViewData["Title"] = "Index";
}
<style>
    th{
        text-align:center;
    }
    td {
        font-size: 16px;
        text-align: center;
        line-height: 40px;
    }
    a label.fa {
        font-size: 20px;
        display: block;
        line-height: 40px;
    }

    a label.fa.fa-lock {
        color: red;
    }

    a label.fa.fa-unlock-alt {
        color: green;
    }
</style>

<h1>Danh Sách Nhân Viên</h1>

<p>
    <a asp-action="Create"class="btn btn-block" style="background-color: #26c6da;">Thêm Nhân Viên</a>
</p>
<center>
    <table class="table " >
        <thead>
            <tr>
                <th> </th>
                <th>
                    Tên Nhân Viên:
                </th>
                <th>
                    Trạng Thái:
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="text-align:left; margin-left:20px;">
                    <img src="~/Uploads/Avatar-Staf/@Html.DisplayFor(modelItem => item.Avatar)" style="width:40px;border-radius:50%;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.Status == 1)
                    {
                        <a asp-action="UnActive" asp-route-id="@item.ID"><label class="fa fa-unlock-alt"></label></a>
                    }
                    else if (item.Status == 0)
                    {
                        <a asp-action="Active" asp-route-id="@item.ID"><label class="fa fa-lock"></label></a>
                    }
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn" style="background-color: #26c6da;">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn" style="background-color: #1ea6c1;">Chi Tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn" style="background-color: #26c6da;">Xóa</a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</center>