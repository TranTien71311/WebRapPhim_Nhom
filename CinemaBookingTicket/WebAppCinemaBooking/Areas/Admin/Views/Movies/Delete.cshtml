@model WebAppCinemaBooking.Areas.Admin.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa Phim</h1>

<h3>Bạn có chắc muốn xóa phim này?</h3>
<div>
    <h4>Phim</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Phim:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Hình Ảnh:
        </dt>
        <dd class="col-sm-10">
            <img src="~/Uploads/Movie/@Html.DisplayFor(model => model.Image)" style="max-width:300px;" />
        </dd>
        <dt class="col-sm-2">
            Trailer Phim:
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Trailer)
        </dd>
        <dt class="col-sm-2">
            Đạo Diễn:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Directors)
        </dd>
        <dt class="col-sm-2">
            Diễn Viên:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cast)
        </dd>
        <dt class="col-sm-2">
            Thể Loại:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            Ngày Khởi Chiếu:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Release_Date)
        </dd>
        <dt class="col-sm-2">
            Thời Lượng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Running_Time) phút
        </dd>
        <dt class="col-sm-2">
            Ngôn Ngữ:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Language)
        </dd>
        <dt class="col-sm-2">
            Đối tượng xem:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rated)
        </dd>
        <dt class="col-sm-2">
            Mô Tả:
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Desc)
        </dd>
        <dt class="col-sm-2">
            Trạng Thái:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />

        <input type="submit" value="Xóa" class="btn" style="width: 300px;;margin-bottom: 10px;background-color: #26c6da;
" />
        <br />
        <a asp-action="Index" class="btn" style="width: 300px;;margin-bottom: 10px;background-color: #1ea6c1;">Trở Về</a>

    </form>
</div>

