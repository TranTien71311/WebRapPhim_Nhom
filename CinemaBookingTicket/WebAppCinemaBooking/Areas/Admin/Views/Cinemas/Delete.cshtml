@model WebAppCinemaBooking.Areas.Admin.Models.Cinema

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa Rạp Phim</h1>

<h3>Bạn có chắc muốn xóa rạp phim này?</h3>
<div>
    <h4>Cinema</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Tên Rạp
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
           Địa Chỉ Rạp:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            Đường Dây Nóng:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hotline)
        </dd>
        <dt class = "col-sm-2">
            Trạng Thái:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Người Quản Lí:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Staf.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />

        <input type="submit" value="Xóa" class="btn"style="width: 300px;;margin-bottom: 10px;background-color: #26c6da;
" />
        <br/>
        <a asp-action="Index" class="btn"style="width: 300px;;margin-bottom: 10px;background-color: #1ea6c1;">Trở Về</a>

    </form>
</div>
