@model WebAppCinemaBooking.Areas.Admin.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>Chi Tiết Khách Hàng</h1>

<div>
    <h4>Khách Hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Khách Hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Mật Khẩu:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pass)
        </dd>
        <dt class="col-sm-2">
            Ngày Sinh:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDay)
        </dd>
        <dt class="col-sm-2">
            Địa Chỉ:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Số Điện Thoại:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            Tổng Chi Tiêu:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total_Spending)
        </dd>
        <dt class="col-sm-2">
            Hình Ảnh:
        </dt>
        <dd class="col-sm-10">
            <img src="~/Uploads/Avatar-Customer/@Html.DisplayFor(model => model.Avatar)" style="max-width:200px" />
        </dd>
        <dt class="col-sm-2">
            Tình Trạng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn" style="width:300px;margin-bottom: 10px;background-color: #26c6da;">Sửa Nhân Viên</a><br />
    <a asp-action="Index" class="btn" style="width:300px;margin-bottom: 10px;background-color: #1ea6c1;">Trở Về</a>
</div>
